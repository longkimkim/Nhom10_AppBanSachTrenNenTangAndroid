<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.TimKiemActivity"
    android:orientation="vertical"
    android:background="@color/maunen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:layout_above="@+id/rcTimKiem"
        android:background="@color/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                android:layout_gravity="center|left"
                android:layout_marginHorizontal="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Kết quả tìm kiếm: "
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/mauchu"
                android:gravity="center|left"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_TK"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:text="abc"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center|left"
            android:textColor="@color/mauchu"
            android:layout_marginHorizontal="5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:id="@+id/ln_khongTimThay">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:id="@+id/img_anh"
            android:src="@drawable/ic_baseline_search_off_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không tìm thấy kết quả nào"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_below="@id/img_anh"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcTimKiem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:visibility="gone"
        android:layout_margin="5dp"/>
</LinearLayout>