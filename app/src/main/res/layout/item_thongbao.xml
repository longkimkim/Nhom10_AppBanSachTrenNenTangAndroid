<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="3dp"
    android:layout_height="100dp">
    <LinearLayout
        android:id="@+id/item_thongbaomoi"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:id="@+id/anhdonhang"
            android:layout_height="80dp"
            android:src="@drawable/icondonhang"/>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ln_iddh"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/toolbar"
                    android:text="Đơn hàng:"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:id="@+id/tv_tendonhang"
                    android:textSize="18sp"
                    android:textColor="@color/toolbar"
                    android:text="DH01"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_tt"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/ln_iddh"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="18sp"
                    android:textColor="@color/toolbar"
                    android:text="Trạng thái đơn hàng:"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_thongbaofragment"
                    android:textSize="18sp"
                    android:textColor="@color/toolbar"
                    android:layout_weight="1"
                    android:text="Người bán đang chuẩn bị hàng"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ln_tt"
                android:textSize="15sp"
                android:textColor="@color/toolbar"
                android:text="23:58:22"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>