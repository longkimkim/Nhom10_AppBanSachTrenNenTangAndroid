<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="15dp"
    android:elevation="5dp"
    android:padding="5dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/id_ln_item_sach"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/item_anhsach"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/pl"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/item_tensach"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Sách pháp luật"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:src="@drawable/ic_sao"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_sao"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/item_gia"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:text="120,000 đ"
                android:textColor="@color/red"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
