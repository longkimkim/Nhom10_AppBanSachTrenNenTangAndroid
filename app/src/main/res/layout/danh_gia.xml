<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/avatardefault" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_avt"
            android:text="username"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/tv_username"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_avt"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_sao1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_star" />

            <ImageView
                android:id="@+id/img_sao2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_star" />

            <ImageView
                android:id="@+id/img_sao3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_star" />

            <ImageView
                android:id="@+id/img_sao4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_star" />

            <ImageView
                android:id="@+id/img_sao5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_star" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/img_avt"
            android:layout_below="@id/tv_username">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_saovang1"
                android:visibility="gone"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_sao"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_saovang2"
                android:visibility="gone"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_sao"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_saovang3"
                android:visibility="gone"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_sao"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_saovang4"
                android:visibility="gone"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_sao"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_saovang5"
                android:visibility="gone"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_sao"/>

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/tv_ngay"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung đánh giá"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginVertical="20sp"
        android:id="@+id/tv_noidung"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
</LinearLayout>